---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection, getEntry, render } from "astro:content";
import { servers } from "@data/links";
import Shield from "@components/showoff/Shield.astro";
import NavLink from "@components/ui/NavLink.astro";
import Nav from "@components/ui/Nav.astro";

import {
  internalLinks,
  externalLinks,
  subscribeLinks,
  socialLinks,
  metaLinks,
} from "@data/links";


// TODO: why doesn't astro believe this exists
const about = await getEntry("blog", "1-about-me")!;

const { Content: About } = await render(about);
---

<BaseLayout frontmatter={about.data}>
  <div class="base">
    <div>
      <h3>{about.data.description}</h3>

      <About />
    </div>

    <div>
      <!-- <div class="homenav"> -->
      <!--   <NavLink -->
      <!--     name="Now" -->
      <!--     icon="mingcute:calendar-time-add-line" -->
      <!--     href="/now" -->
      <!--   /> -->
      <!-- </div> -->

      <div class="shields">
        {
          servers.map((server) => {
            return <Shield server={server} />;
          })
        }
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .base {
    min-height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .shields {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    margin: var(--halfpad);
  }

  .homenav {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    align-content: flex-start;
    /* margin: var(--halfpad); */
    /* margin-bottom: 0; */
  }
</style>
