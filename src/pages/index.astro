---
import BaseLayout from "@layouts/BaseLayout.astro";

import { servers } from "@data/links";

import About from "@content/about/about-me.md";

const frontmatter = {
  title: "",
  description: "Welcome to gregsite.",
  date: new Date("2023-10-01"),
  updated: new Date("2024-09-14"),
};

import { getCollection, getEntries } from "astro:content";

const goofs = await getCollection("goofs");
---

<BaseLayout frontmatter={frontmatter}>
  <h3 style="margin-top: 0">gregdan3 is a dev</h3>
  <About />

  <h3>goofs</h3>

  {goofs.reverse().map((goof) => <p>{goof.body}</p>)}

  <br />
</BaseLayout>
