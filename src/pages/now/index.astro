---
import BaseLayout from "@layouts/BaseLayout.astro";
import Date from "@components/blog/Date.astro";
import { getEntry } from "astro:content";

const now = await getEntry("now", "now");

const { Content } = await now.render();
---

<BaseLayout frontmatter={now.data}>
  <div class="container">
    <div class="updated">
      <Date
        date={now.data.date}
        updated={now.data.updated}
        showUpdated={true}
      />
    </div>

    <Content />

    <div class="explainer">
      <a href="https://nownownow.com/about" rel="nofollow" target="_blank">
        what is this page?
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    position: relative;
  }
  .updated {
    position: absolute;
    top: 0;
    right: 0;
    color: var(--text-soft);
    font-size: var(--small-font);
  }
  .explainer {
    position: absolute;
    bottom: 0;
    right: 0;
    font-size: var(--small-font);
  }
</style>
