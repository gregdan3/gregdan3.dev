---
import BaseLayout from "@layouts/BaseLayout.astro";
import Date from "@components/posts/Date.astro";
import { getEntry, render } from "astro:content";

const now = await getEntry("blog", "now")!;

const { Content: Now } = await render(now);
---

<BaseLayout frontmatter={now.data}>
  <div class="container">
    <div class="updated">
      <Date
        date={now.data.date}
        updated={now.data.updated}
        showUpdated={true}
        tooltipSide="left"
      />
    </div>

    <div class="explainer">
      <a href="https://nownownow.com/about" rel="nofollow" target="_blank">
        what is this?
      </a>
    </div>

    <div class="now">
      <Now />
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    position: relative;
  }
  .updated {
    position: absolute;
    top: -1.35rem;
    right: 0;
    color: var(--text-soft);
    font-size: var(--small-font);
  }
  .explainer {
    position: absolute;
    top: 0rem;
    right: 0rem;
    text-align: right;
    font-size: var(--small-font);
  }
</style>
