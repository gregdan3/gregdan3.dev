---
export interface IconLinkProps {
  name: string;
  href: string;
  icon?: string;
  bclass?: string;
  tooltip?: string;
}

let { name, href, icon, tooltip } = Astro.props as IconLinkProps;
import { Icon } from "astro-icon/components";

import FixedIcon from "@components/ui/FixedIcon.astro";
---

<div>
  <a href={href}>
    <Icon name={icon} />
  </a>
</div>

<style>
  /* TODO: make icons colorable (on hover) */
  div {
    padding: 0.25rem;
  }
  a {
    color: var(--med-bd);
  }
</style>
