---
import { Image } from "astro:assets";
export interface AvatarProps {
  image: typeof Image;
}
const { image } = Astro.props as AvatarProps;
---

<img src={image.src} />

<style>
  img {
    width: 3.8rem;
    height: 3.8rem;
    border-radius: var(--squircle);
    border: var(--block-mark) solid var(--block-bg);
    background-color: var(--block-bg);
  }
</style>
