---
import type { ImageMetadata } from "astro";
export interface Props {
  image: ImageMetadata;
  alt?: string;
}
const { image, alt } = Astro.props;
---

<img src={image.src} alt={alt ? alt : null} />

<style>
  img {
    width: 3.8rem;
    height: 3.8rem;
    border-radius: var(--squircle);
    box-shadow: var(--hover-shadow), var(--edge-shadow);
    background-color: var(--main-bg);
  }
</style>
