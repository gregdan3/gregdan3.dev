---
import { Image } from "astro:assets";
export interface AvatarProps {
  image: typeof Image;
}
const { image } = Astro.props as AvatarProps;
---

<img src={image.src} />

<style>
  img {
    height: 4rem;
    border: 4px solid --var(--soft-bg);
    /* border-radius: 25%; */
    background-color: var();
  }
</style>
