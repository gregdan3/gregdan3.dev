---
const { id } = Astro.props; // Pass a unique toggleId for multiple sidebars
---

<label for={id} class="toggle-btn"> Open Menu </label>

<style>
  .toggle-btn {
    background-color: #007bff;
    color: white;
    padding: 0.5rem 1rem;
    border: none;
    cursor: pointer;
    z-index: 1100;
  }

  /* Hide the button on larger screens */
  @media (min-width: 768px) {
    .toggle-btn {
      display: none;
    }
  }
</style>
